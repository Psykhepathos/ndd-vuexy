APP_NAME="Plataforma Vale Ped√°gio Tambasa"
APP_ENV=local
APP_KEY=
APP_DEBUG=true

# ============================================================================
# URL Configuration
# ============================================================================
# Desenvolvimento local (php artisan serve --port=8002):
#   APP_URL=http://localhost:8002
#   VITE_API_BASE_URL=/api
#
# Laravel Herd (valepedagio.test):
#   APP_URL=http://valepedagio.test
#   VITE_API_BASE_URL=/api
#
# Producao com Apache Alias /valepedagio:
#   APP_URL=http://servidor/valepedagio
#   ASSET_URL=/valepedagio
#   VITE_API_BASE_URL=/valepedagio/api
# ============================================================================
APP_URL=http://localhost:8002
ASSET_URL=
VITE_API_BASE_URL=/api

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=pt_BR

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="ndd@example.com"
MAIL_FROM_NAME="${APP_NAME}"
MAIL_NOREPLY_ADDRESS=naoresponda@example.com

VITE_APP_NAME="${APP_NAME}"

# Para producao, sera detectado automaticamente via window.location
SANCTUM_STATEFUL_DOMAINS=localhost:8002,localhost:5175

# ============================================================================
# Progress OpenEdge Database (OBRIGATORIO - definir valores reais)
# ============================================================================
PROGRESS_CONNECTION=odbc
PROGRESS_HOST=
PROGRESS_DATABASE=
PROGRESS_USERNAME=
PROGRESS_PASSWORD=
PROGRESS_PORT=13361
PROGRESS_DSN=
PROGRESS_JDBC_URL=
PROGRESS_DRIVER_PATH=

# ============================================================================
# Google Maps API (Geocoding)
# ============================================================================
GOOGLE_MAPS_API_KEY=
VITE_GOOGLE_MAPS_API_KEY="${GOOGLE_MAPS_API_KEY}"

# Protecao de Quota Google Maps
GOOGLE_MAPS_DAILY_LIMIT=1000
GOOGLE_MAPS_MONTHLY_BUDGET=1.00
GOOGLE_MAPS_PROTECTION_ENABLED=true

# ============================================================================
# SemParar SOAP API (OBRIGATORIO - definir valores reais)
# ============================================================================
SEMPARAR_WSDL_URL=https://app.viafacil.com.br/wsvp/ValePedagio?wsdl
SEMPARAR_CNPJ=
SEMPARAR_USER=
SEMPARAR_PASSWORD=
SEMPARAR_TIMEOUT=30
ALLOW_SOAP_PURCHASE=false

# ============================================================================
# NDD Cargo API (OBRIGATORIO - definir valores reais)
# @see docs/integracoes/ndd-cargo/README.md
# ============================================================================
NDD_CARGO_ENVIRONMENT=homologacao
NDD_CARGO_CNPJ=
NDD_CARGO_TOKEN=
NDD_CARGO_PT_EMISSOR=

# Certificado Digital NDD Cargo
NDD_CARGO_CERT_TYPE=pfx
# NDD_CARGO_CERT_PFX_PATH usa o padrao do config (storage_path)
NDD_CARGO_CERT_PASSWORD=

# Configuracoes Adicionais NDD Cargo
NDD_CARGO_VERSAO_LAYOUT=4.2.12.0
NDD_CARGO_TIMEOUT=60
NDD_CARGO_CACHE_ENABLED=true
NDD_CARGO_CACHE_ROTAS_TTL=86400
NDD_CARGO_LOG_XML=false
NDD_CARGO_LOG_RESPONSES=true
NDD_CARGO_LOG_LEVEL=info
NDD_CARGO_RATE_LIMIT=60
NDD_CARGO_TEST_RATE_LIMIT=10

# ============================================================================
# Python Flask Service (PDF + WhatsApp) - opcional
# ============================================================================
PYTHON_FLASK_URL=http://localhost:5001
PYTHON_FLASK_TIMEOUT=30

# ============================================================================
# OSRM Routing (servidores publicos gratuitos - opcional configurar)
# ============================================================================
# OSRM_SERVER_PRIMARY=https://router.project-osrm.org
# OSRM_SERVER_SECONDARY=https://routing.openstreetmap.de/routed-car
# OSRM_TIMEOUT=15

# ============================================================================
# Database Seeder (opcional - usuarios de desenvolvimento)
# ============================================================================
# SEED_ADMIN_EMAIL=admin@ndd.com
# SEED_ADMIN_PASSWORD=Admin@123
# SEED_USER_EMAIL=user@ndd.com
# SEED_USER_PASSWORD=User@123
